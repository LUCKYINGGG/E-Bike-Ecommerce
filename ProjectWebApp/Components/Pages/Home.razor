<PageTitle>Home</PageTitle>

<MudContainer >
    <MudGrid Class="d-flex flex-column justify-center flex-grow-1 gap-4 mx-auto align-center" Elevation="0" Align="Align.Center">
        <MudItem xs="12"  >
            <MudStack >
                <MudText Class="mx-auto" Typo="Typo.h2" GutterBottom="true" Style="font-weight:bold">
                    Bike R Us
                </MudText>
                <MudImage ObjectFit="ObjectFit.Cover" ObjectPosition="ObjectPosition.Center" Height="100" Width="100" Src="e-bike-logo.jpg" Alt="Logo" Elevation="25" Class="rounded-lg m-10 mx-auto " />

